# 1un
# 2015-11-06
# 作为用户环境变量被初始化脚本调用

#------------------------------------------------------

if [ "$PS1" ]; then
  if [ "$BASH" ] && [ "$BASH" != "/bin/sh" ]; then
    # The file bash.bashrc already sets the default PS1.
    # PS1='\h:\w\$ '
    if [ -f /etc/bash.bashrc ]; then
      . /etc/bash.bashrc
    fi
  else
    if [ "`id -u`" -eq 0 ]; then
      PS1='# '
    else
      PS1='$ '
    fi
  fi
fi

#------------------------------------------------------

if [ -d /etc/profile.d ]; then
  for i in /etc/profile.d/*.sh; do
    if [ -r $i ]; then
      . $i
    fi
  done
  unset i
fi

#------------------------------------------------------

USER_IP=`who -u am i 2>/dev/null| awk '{print $NF}'|sed -e 's/[()]//g'`

#------------------------------------------------------

STFILESIZE=5000
HISTFILE=/var/log/recordhistory.txt
HISTSIZE=3000
export HISTFILE
export HISTTIMEFORMAT="(`whoami`@$USER_IP %Y-%m-%d %H:%M:%S) -> "
shopt -s histappend

#------------------------------------------------------

ulimit -c unlimited
ulimit -SHn 65535

#------------------------------------------------------

alias svrd="ps -ef|grep svr[d]"
alias ll='ls -alF'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
mkcd(){ mkdir -p $1 ; cd $1 ; }

#------------------------------------------------------

LanIp=$(ip addr show enp2s0|awk '/inet / {print $2}')

if [ $(id -u) != "0" ]; then
    PS1="\[\e[1;33m\]\h \[\e[m\]\[\e[1;30m\][ Wan:$(cat /etc/wan) Lan:${LanIp} ]\[\e[m\]\[\e[1;35m\] \w \n\t reado$\[\e[m\] "
else
    PS1="\[\e[1;33m\]\h \[\e[m\]\[\e[1;36m\][ Wan:$(cat /etc/wan) Lan:${LanIp} ]\[\e[m\]\[\e[1;32m\] \w \n\t#\[\e[m\] "
fi

#------------------------------------------------------

echo 0 > /proc/sys/vm/swappiness

#------------------------------------------------------

TMOUT=300

#------------------------------------------------------

